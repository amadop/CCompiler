#include <stdio.h>

int main() {
    
    int matrix1[2][2] = { {1, 2}, {3, 6} };
    int matrix2[2][2] = { {6, 3}, {9, 2} };

    double determinant;

    
    printf("Matrix 1:\n");
    printf("%d %d\n", matrix1[0][0], matrix1[0][1]);
    printf("%d %d\n", matrix1[1][0], matrix1[1][1]);

    determinant = (matrix1[0][0] * matrix1[1][1]) - (matrix1[0][1] * matrix1[1][0]);

    if (determinant == 0)
        printf("Determinant is: %.2f. This matrix is non-invertible.\n\n", determinant);
    else
        printf("Determinant is: %.2f. This matrix is invertible.\n\n", determinant);

    
    printf("Matrix 2:\n");
    printf("%d %d\n", matrix2[0][0], matrix2[0][1]);
    printf("%d %d\n", matrix2[1][0], matrix2[1][1]);

    determinant = (matrix2[0][0] * matrix2[1][1]) - (matrix2[0][1] * matrix2[1][0]);

    if (determinant == 0)
        printf("Determinant is: %.2f. This matrix is non-invertible.\n", determinant);
    else
        printf("Determinant is: %.2f. This matrix is invertible.\n", determinant);

    return 0;
}
